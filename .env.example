# Discord OAuth Proxy Auth Environment Variables

# Discord OAuth App Settings
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here
DISCORD_CALLBACK_URL=https://yourdomain.com/callback

# Required Guild and Role
DISCORD_GUILD_ID=your_discord_guild_id_here
DISCORD_ROLE_ID=your_discord_role_id_here

# Session Configuration
SESSION_SECRET=your_super_secret_session_key_here

# Application Settings
PORT=3004
NODE_ENV=production

# Redis Configuration (optional, for session storage)
# Leave empty to use file-based sessions in production or memory sessions in development
REDIS_HOST=
REDIS_PORT=6379
REDIS_PASSWORD=

# Bot Token (for API calls to check guild membership)
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Webhook for rate limit notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Webhook reporting level (0=off, 1=rate limit only, 2=rate limit + successful logins, 3=all attempts)
WEBHOOK_LEVEL=1
